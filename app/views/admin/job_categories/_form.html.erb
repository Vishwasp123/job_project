<div class="forn-group">
  <%= form_with model: [:admin, job_category] do |form| %>
  <% if @job_category.errors.any? %>
  <% @job_category.errors.full_messages.each do |message| %>
  <p><%= message %></p>
  <% end %>
  <% end %>
  <%= form.label :name ,class:"form-label" %>
  <%= form.text_field :name ,class:"form-control" %>

  <%= form.submit class:"btn btn-primary btn-block  mt-3 mb-4"%>
</div>
<% end %>

